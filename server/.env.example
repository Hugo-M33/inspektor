# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Database Configuration
# PostgreSQL (recommended for production):
DATABASE_URL=postgresql://inspektor:inspektor_password@localhost:7654/inspektor
# SQLite (simple, file-based - good for testing only):
# DATABASE_URL=sqlite:///./inspektor.db

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production-use-a-long-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=720  # 30 days

# Metadata Cache
METADATA_TTL_HOURS=24

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Logging
SQL_ECHO=false  # Set to true to see SQL queries in logs
